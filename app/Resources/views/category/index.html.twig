{% extends 'base.html.twig' %}

{% block body %}
<div class="panel panel-default">
<div class="panel-heading"><h1>Categories list</h1></div></div>
    <h4><strong><a href="{{ path('category_new') }}"> <span class="glyphicon glyphicon-plus"></span>  Create a new category</a></strong></h4>
    <h4><strong><a href="{{ path('task_index') }}"> <span class="glyphicon glyphicon-edit"></span>  Back to the tasks list</a></strong></h4>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>
                    <ul>

                        <li>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
