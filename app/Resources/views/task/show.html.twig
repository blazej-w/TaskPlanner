{% extends 'base.html.twig' %}

{% block body %}
    <h1><p class="text-center">Task</p></h1>
<div class="container">
    <table class = "table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Due</th>
                <td>{% if task.due %}{{ task.due|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Completed</th>
                <td>{% if task.completed %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ task.priority }}</td>
            </tr>
        </tbody>
    </table>


    <div class="container">
        {% for comment in user.comment %}
        <p>{{ comment.user }} : {{ comment.description }}</p>
        {% endfor %}



    </div>


    </div>
    <ul>
        <div class="col-md-2 col-md-offset-5"><p class="text-center">
        <li>
            <a href="{{ path('task_index') }}"><strong>Back to the list of your tasks</strong></a>
        </li>
        <li>
            <a href="{{ path('task_edit', { 'id': task.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-primary" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        </p>
            </div>
    </ul>
{% endblock %}
