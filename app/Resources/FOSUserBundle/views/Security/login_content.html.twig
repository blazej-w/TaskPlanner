{% trans_default_domain 'FOSUserBundle' %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="col-md-3 col-md-offset-5">
    <label for="username">{{ 'Your username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'Your password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" />
<br>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'Remember me!'|trans }}</label>

    <input type="submit" id="_submit" class="center-block btn btn-primary" name="_submit" value="{{ 'Submit'|trans }}" />
    <br>
        <p class="text-center">Not a user yet? Register</p>
    </div>
</form>
